<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/logo"/>

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#ebca0707"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:textColor="#fff"
                android:text="UserName"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="NGO Description"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Address :" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Address"
                    android:id="@+id/address_profile"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Email :" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Email"
                    android:id="@+id/email_profile"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Contact:" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Contact"
                    android:id="@+id/contact_profile"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Experience:" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Experience"
                    android:id="@+id/experience_profile"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Website:" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Website"
                    android:id="@+id/website_profile"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Facebook :" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Facebook"
                    android:id="@+id/facebook_profile"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="75dp"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Linkedin:" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:text="Linkedin"
                    android:id="@+id/linkedin_profile"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/editpro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:onClick="editProfile"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>